# For local PostgreSQL
DATABASE_URL="postgresql://username:password@your-db-host:25060/killreport?sslmode=require&connection_limit=2"

# RabbitMQ Configuration
RABBITMQ_URL="amqp://localhost:5672"

# Redis Configuration (for distributed PubSub)
REDIS_URL="redis://localhost:6379"
USE_REDIS_PUBSUB=true

# Node Environment
NODE_ENV=development

# Eve Online SSO
# Register your application at: https://developers.eveonline.com/
EVE_CLIENT_ID=your_eve_client_id_here
EVE_CLIENT_SECRET=your_eve_client_secret_here
EVE_CALLBACK_URL=http://localhost:4000/auth/callback

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_random_jwt_secret_here

# GraphQL Settings
# Set to false in production to disable introspection and playground
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true
