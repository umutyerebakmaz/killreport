# Database Configuration
# Local development: Use local PostgreSQL or DigitalOcean public network
# Production: Use DigitalOcean private network connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/killreport"
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=killreport

# RabbitMQ Configuration
RABBITMQ_URL="amqp://localhost"

# Redis Configuration (for distributed PubSub)
REDIS_URL="redis://localhost:6379"
USE_REDIS_PUBSUB=true

# Node Environment
NODE_ENV=development

# Eve Online SSO Configuration
# https://developers.eveonline.com/ adresinden application olu≈üturun
EVE_CLIENT_ID=your_eve_client_id_here
EVE_CLIENT_SECRET=your_eve_client_secret_here
EVE_CALLBACK_URL=http://localhost:4000/auth/callback
